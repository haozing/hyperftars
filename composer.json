{
    "name": "hyperftars/tars",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "",
    "autoload": {
        "psr-4": {
            "Hyperftars\\Tars\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "hyperf/framework": "2.0.*",
        "hyperf/di": "2.0.*",
        "phptars/tars-registry": "0.1.7",
        "phptars/tars-deploy": "0.1.1",
        "phptars/tars-utils": "0.3.0",
        "phptars/tars-report": "0.1.3",
        "phptars/tars-client": "0.3.0",
        "phptars/tars2php": "0.3.2",
        "hyperf/event": "~2.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "dev-master",
        "swow/swow": "dev-develop",
        "symfony/var-dumper": "^5.1"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperftars\\Tars\\ConfigProvider"
        }
    }
}
